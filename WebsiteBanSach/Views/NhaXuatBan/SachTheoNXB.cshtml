@using WebsiteBanSach.Models;
@model List<SACH>

@{
    ViewBag.Title = "SachTheoNXB";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

@{ int i = 0;}
@foreach (var item in Model)
{
    <div id="SanPham">
        @*i++;*@
        <div id="AnhBia" style="padding-left: 3rem;"><img src="@Url.Content("~/ImagesSP/" + item.AnhBia)" width="100" height="150" /></div>
        <div id="ThongTin">
            @if (item.TenSach.Length < 30)
            {
                <a href="/Sach/XemChiTiet?MaSach=@item.MaSach" id="TenSach" title="@item.TenSach">@item.TenSach.</a>
            }

            else
            {
                <a href="/Sach/XemChiTiet?MaSach=@item.MaSach" id="TenSach" title="@item.TenSach">@item.TenSach.</a>
            }

        </div>
        <div id="DonGia">@item.GiaBan đ</div>
        @if (i % 3 == 0)
        {
            <div style="clear:both"></div>
        }
    </div>
} 
<style>
    div#NoiDung {
        display: grid;
        grid-template-columns: auto auto auto;
        padding-left: 14rem;
        padding-top: 2rem;
    }
</style>
